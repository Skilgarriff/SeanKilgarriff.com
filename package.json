{
  "name": "personal-site",
  "version": "0.1.0",
  "private": true,
  "description": "Sean Kilgarriff's personal website",
  "scripts": {
    "start": "webpack-dev-server --config webpack.config.dev.js",
    "clean:dist": "rm -rf dist",
    "build": "BABEL_ENV=production NODE_ENV=production webpack",
    "build:dev": "BABEL_ENV=production NODE_ENV=staging webpack",
    "lint:js": "eslint src",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint": "npm run lint:js && npm run lint:css",
    "test:watch": "npm run test -- --reporter min --watch",
    "test": "NODE_ENV=test nyc mocha \"src/**/*.spec.js\"",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov",
    "flow": "flow; test $? -eq 0 -o $? -eq 2"
  },
  "dependencies": {
    "autoprefixer": "^6.5.3",
    "autoprefixer-core": "^6.0.1",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-istanbul": "^3.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "case-sensitive-paths-webpack-plugin": "^1.1.4",
    "chai": "^3.5.0",
    "chalk": "^1.1.3",
    "classnames": "^2.2.5",
    "clipboard": "^1.5.15",
    "copy-webpack-plugin": "^3.0.1",
    "css-loader": "^0.25.0",
    "css-mqpacker": "^5.0.1",
    "cssnano": "^3.8.0",
    "detect-port": "^1.0.1",
    "dotenv": "^2.0.0",
    "enzyme": "^2.6.0",
    "eslint": "^3.7.0",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-loader": "1.5.0",
    "eslint-plugin-flowtype": "2.18.1",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "2.2.2",
    "eslint-plugin-react": "^6.3.0",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "fingerprintjs2": "^1.4.1",
    "heatmap.js": "^2.0.5",
    "html-webpack-plugin": "^2.22.0",
    "isparta": "^4.0.0",
    "istanbul": "1.0.0-alpha.2",
    "jsdom": "^9.6.0",
    "mocha": "^3.1.0",
    "normalize.css": "^5.0.0",
    "nyc": "next",
    "open-color": "^1.4.0",
    "postcss-cssnext": "^2.8.0",
    "postcss-loader": "^1.1.1",
    "postcss-reporter": "^3.0.0",
    "postcss-smart-import": "^0.6.3",
    "precss": "^1.4.0",
    "react": "^15.4.1",
    "react-addons-css-transition-group": "^15.4.1",
    "react-addons-test-utils": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-fontawesome": "^1.5.0",
    "react-ga": "^2.1.2",
    "react-heatmapjs": "1.2.1",
    "react-hot-loader": "^3.0.0-beta.5",
    "react-router": "v4.0.0-alpha.6",
    "react-title-component": "^1.0.1",
    "react-user-focus": "1.3.5",
    "sitemap-webpack-plugin": "^0.1.1",
    "style-loader": "^0.13.1",
    "stylelint": "^7.6.0",
    "stylelint-config-standard": "^15.0.0",
    "webpack": "v2.2.0-rc.0",
    "webpack-dev-server": "v2.2.0-rc.0"
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ],
      "react",
      "stage-0"
    ],
    "plugins": [
      "transform-flow-strip-types",
      "react-hot-loader/babel"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul",
          "transform-es2015-modules-commonjs"
        ]
      },
      "development": {
        "presets": [
          "react-hmre"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "browser": true,
      "mocha": true
    },
    "rules": {
      "arrow-parens": "off",
      "generator-star-spacing": "off",
      "no-console": "off",
      "import/extensions": "off",
      "import/no-extraneous-dependencies": "off",
      "react/forbid-prop-types": "off",
      "react/jsx-filename-extension": "off",
      "react/no-danger": "off",
      "react/no-unused-prop-types": "off",
      "react/sort-comp": [
        2,
        {
          "order": [
            "type-annotations",
            "static-methods",
            "lifecycle",
            "everything-else",
            "render"
          ]
        }
      ]
    }
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.spec.js"
    ],
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "all": true,
    "sourceMap": false,
    "instrument": false
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
